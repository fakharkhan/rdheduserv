<h1>Videos</h1>

<table class="table">
  <tr>
    <th>Title</th>

    <th>Description</th>
    <th>Remoteurl</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @videos.each do |video| %>
  <tr>

    <td><%= video.title %></td>

    <td><%= video.description %></td>
    <td><%= video.videoid %></td>
    <td><%= link_to 'Show', video ,:class=>"btn btn-info" %></td>
    <td><%= link_to 'Edit', edit_video_path(video) ,:class=>"btn btn-primary " %></td>
    <td><%= link_to 'Destroy', video, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-danger" %></td>
  </tr>
<% end %>
</table>

